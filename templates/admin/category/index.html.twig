{% extends 'base.html.twig' %}

{% block title %}Admin - Catégories{% endblock %}

{% block body %}
    
    <h1 class="text-center mt-3 mb-3">Gestion catégories</h1>
    
    <p>
        <a href="{{ path('app_admin_category_edit') }}" class="btn btn-outline-info mb-2">
            Ajouter une catégorie
        </a>
    </p>
    
    <table class="table table-striped">
        
        <thead class="thead-dark">
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Nom</th>
                <th scope="col" style="width: 250px"></th>
            </tr>
        </thead>
        
        <tbody>
            {% for categorie in categories %}
                <tr>
                    <td>{{ categorie.id }}</td>
                    <td>{{ categorie.name }}</td>
                    <td class="text-right">
                        <a href="{{ path('app_admin_category_edit', {'id': categorie.id}) }}" class="btn btn-info">
                            Modifier
                        </a>
                        <a href="{{ path('app_admin_category_delete', {'id': categorie.id}) }}" class="btn btn-outline-danger ml-1">
                            Supprimer
                        </a>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
        
    </table>
    

{% endblock %}