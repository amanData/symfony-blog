{% extends 'base.html.twig' %}

{% block title %}Admin - Articles{% endblock %}

{% block body %}
    
    <h1 class="text-center mt-3 mb-3">Ã‰dition articles</h1>
    
    {# ouvre la balise form #}
    {{ form_start(form) }}
    
    {{ form_row(form.title) }}
    {{ form_row(form.content) }}
    {{ form_row(form.category) }}
    {{ form_row(form.image) }}
    
    {% if original_image is not null %}
        <p>
            Actuellement :
            <img src="{{ asset('images/' ~ original_image) }}" height="200px" class="rounded">
        </p>
    {% endif %}
    
    {# bloc de formulaire du champ name #}
    <div class="text-right">
        <button type="submit" class="btn btn-info">
            Enregistrer
        </button>
        <a href="{{ path('app_admin_article_index') }}" class="btn btn-outline-secondary">
            Retour
        </a>
    </div>
    
    {# ferme la balise form #}
    {{ form_end(form) }}

{% endblock %}