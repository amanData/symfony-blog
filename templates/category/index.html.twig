{% extends 'base.html.twig' %}

{% block title %}{{ parent() }} - Cat√©gorie{% endblock %}

{% block body %}

    <h1 class="text-center mb-3 mt-3">{{ category }}</h1>
    
    <h2 class="mb-3">Derniers articles</h2>
    
    <table class="table table-striped">
        <thead>
        <tr>
            <th scope="col">Titre</th>
            <th scope="col">Date de publication</th>
            <th scope="col">Auteur</th>
        </tr>
        </thead>
        <tbody>
        {% for article in articles %}
            
                <tr>
                    <td>
                        <a href="{{ path('app_article_index', {'id': article.id}) }}">{{ article.title }}</a>
                    </td>
                    <td>{{ article.publicationDate|date('d/m/Y H:i') }}</td>
                    <td>{{ article.author }}</td>
                </tr>
            
        {% else %}
            <tr>
                <td colspan="6" class="text-center">
                    Aucun article
                </td>
            </tr>
        {% endfor %}
        </tbody>
    
    </table>
    
    
{% endblock %}
